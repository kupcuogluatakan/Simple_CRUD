@using ODMSModel.Shared
@model ODMSModel.Permission.PermissionIndexViewModel
@{
    ViewBag.Title = CommonUtility.GetResourceValue("Permission_PageTitle_Index");
}
 
<div id="showSearch">@CommonUtility.GetResourceValue("Global_Display_Search_Criteria")</div>
<div id="searchDiv">
    <div id="searchFields">
        <div class="labelDiv">@Html.LabelFor(v => v.PermissionCode)</div>
        <div class="shortTxtDiv">@Html.TextBoxFor(v => v.PermissionCode) </div>
        
        <div class="labelDiv">@Html.LabelFor(v => v.PermissionName)</div>
        <div class="shortTxtDiv">@Html.TextBoxFor(v => v.PermissionName) </div>
    </div>
</div>
@ODMSHelpers.LinkButton("btnSearch", CommonUtility.GetResourceValue("Global_Display_Search"), "", "", "",CommonValues.PermissionCodes.Permission.PermissionDetails)

  <br />
<div id="modelWindowDiv">
    @(Html.Kendo().Window()
        .Name("modelWindow")
    .Title("Customer")
     .Draggable()
    .Resizable()
    .Width(950)
    .Height(350)
    .Visible(false)
    .Modal(true)
    .Iframe(true)
    .Events(ev => ev.Close(@"function(e){
         var grid = $('#grid').data('kendoGrid');
        grid.dataSource.page(1);
    }"))
    )
</div>
<script>
    function Search() {
        return {
            PermissionCode: $("#PermissionCode").val(),
            PermissionName: $("#PermissionName").val()
        };
    }
    $(document).ready(function () {
        
        $("body").delegate("#btnSearch", "click", function (e) {
            var grid = $('#grid').data('kendoGrid');
            grid.dataSource.page(1);

        });
        $("body").delegate("#showSearch", "click", function (e) {
            var IsVisible = Boolean($(this).hasClass("searchVisible"));
           
            if (!IsVisible) {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Hide_Search_Criteria")');
                $(this).addClass("searchVisible");
                $("#searchDiv").show("slow");
            }
            else {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Search_Criteria")');
                $(this).removeClass("searchVisible");
                $("#searchDiv").hide("slow");
            }
        });
        $("body").delegate(".modalClick", "click", function (e) {
            $('#modelWindow').html('');
            e.preventDefault();

            var link;
            var clickedId = $(this).attr("id");
            var frameTitle = $(this).attr("frameTitle");
            if ($(this).hasClass("details") == true) {
                link = "@Url.Action("PermissionDetails", "Permission", new { id = -1 })";
                link = link.replace("-1", clickedId);
            }
            $("#modelWindow_wnd_title").html(frameTitle);

            var windowWidget = $("#modelWindow").data("kendoWindow");
            var closeOrigin = windowWidget.close;

            windowWidget.refresh({
                url: link
            }).center();
            windowWidget.center();
            windowWidget.open();
            
        });

    });

</script>

<div class="kendoGridDiv" id="grd" name="grd">
    @(Html.Kendo().Grid<PermissionListModel>()
          .Name("grid")

          .Columns(columns =>
              {
                  columns.Bound(p => p.PermissionId).ClientTemplate("<center><a class='details modalClick' id='#=PermissionId#' frameTitle='" + @CommonUtility.GetResourceValue("Permission_PageTitle_Details") + "' href='/Permission/PermissionDetails/#=PermissionId#'><img class=iconLink src='" + Url.Content("~/Images/view.png") + "'/></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.Permission.PermissionDetails));
                  columns.Bound(p => p.AdminDesc).Width(100).Sortable(true);
                  columns.Bound(p => p.PermissionCode).Width(140).Sortable(true);
                  columns.Bound(p => p.PermissionName).Width(140).Sortable(true);
                  columns.Bound(p => p.Status).Width(100).Sortable(true);
              })
                     .Pageable()
                     .Sortable()
                     .Scrollable()


                     .DataSource(dataSource => dataSource
                                                   .Ajax()
                                                   .PageSize(CommonValues.GridPageSize.Short)
                                                   .ServerOperation(true)
                                                   .Read(read => read.Action("ListPermission", "Permission",Model).Data("Search"))
                                                   .Model(model => model.Field(o => o.PermissionId).DefaultValue(-1)))

                     )
</div>
