<script src="~/Scripts/jquery.maskedinput.js"></script>

<script type="text/javascript">

    function DeleteSparePartCountryVatRatio(obj, aId, idCountry) {
        var token = $('input[name="__RequestVerificationToken"]').val();
        
        DeleteConfirm(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteSparePartCountryVatRatio","SparePartCountryVatRatio")",
                data: { IdPart: aId, IdCountry: idCountry, "__RequestVerificationToken": token },
            traditional: true,
            success: function (result) {
                if (result.Status == 0)
                    SetErrorMessage(result.Message);
                else {
                    var grid = $('#SparePartCountryVatRatioGrid').data('kendoGrid');
                    grid.dataSource.read();
                    SetSuccessMessage(result.Message);
                }
            },
            dataType: "json"
        });
        });
}

