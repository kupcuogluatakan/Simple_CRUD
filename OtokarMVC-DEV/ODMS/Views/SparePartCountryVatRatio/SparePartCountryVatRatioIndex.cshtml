<br />
<div id="SparePartCountryVatRatioModelWindowDiv">
    @(Html.Kendo().Window()
        .Name("SparePartCountryVatRatioModelWindow")
     .Draggable()
    .Resizable()
    .Width(950)//.Width(950)
    .Height(350)//.Height(440)
    .Visible(false)
    .Modal(true)
    .Iframe(true)
