@model ODMSModel.PDIResultDefinition.PDIResultDefinitionViewModel
@using ODMSCommon.Resources;

@{
    ViewBag.Title = MessageResource.PDIResultDefinition_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

 
@using (Html.BeginForm("PDIResultDefinitionUpdate", "PDIResultDefinition", FormMethod.Post))
{
    <div class="labelDiv">@Html.LabelFor(v => v.PDIResultCode)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.PDIResultCode) &nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(c => c.IsActiveName)</div>
    <div class="shortTxtDiv">@Html.CheckBoxFor(v => v.IsActive)  @Html.ValidationMessageFor(v => v.IsActive)  </div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.AdminDesc)</div>
    <div class="shortTxtDiv">@Html.TextAreaFor(v => v.AdminDesc) @Html.ValidationMessageFor(v => v.AdminDesc) 
    </div>
 
    <div class="labelDiv" style="margin-top: 5px">@Html.LabelFor(v => v.ResultNameML)</div>
    <div class="shortTxtDiv" style="margin-top: 5px">
        @{ Html.RenderAction("MultiLanguageTextbox", "MultiLanguage", new { DefaultText = Model.MultiLanguageContentAsText, IsEnabled = true }); }
        @Html.ValidationMessageFor(v => v.MultiLanguageContentAsText)
    </div>
    <div class="clearDiv">&nbsp;</div>
    @Html.HiddenFor(v => v.PDIResultCode)
    @ODMSHelpers.Button("Update", MessageResource.Global_Display_Update, CommonValues.PermissionCodes.PDIResultDefinition.PDIResultDefinitionUpdate, "PDIResultDefinitionUpdate")        
}
<script>
    $(document).ready(function () {
        $('form').each(function () {
            var validator = $(this).data('validator');
            if (validator && validator.settings) {
                validator.settings.ignore = "";
            }
        });
    });
</script>
