@model ODMSModel.FleetRequestVehicle.FleetRequestVehicleViewModel
@Html.HiddenFor(c=>c.FleetRequestVehicleId)
@using ODMSCommon.Resources
@using ODMSModel.FleetRequestVehicle
<style>
    .k-link2 {
        color: #0077DD !important;
    }
    
</style>
@Html.AntiForgeryToken()
@{
    ViewBag.Title = MessageResource.FleetRequestVehicle_PageTitle_Index;
}
@if (!Model.HideElements)
{
    if (Model.FleetRequestStatus == 0)
    {
        @ODMSHelpers.LinkButton("btnCreate2", CommonUtility.GetResourceValue("Global_Display_New"), "Create", "modalClickMainLabour createNewMaintLabour", CommonUtility.GetResourceValue("FleetRequestVehicle_PageTitle_Create"), CommonValues.PermissionCodes.FleetRequestVehicle.FleetRequestVehicleCreate)
    }

@*scripts start*@
    <script type="text/javascript">
        $(document).ready(init);

        function init() {
            $("#btnSearch3").click(function(e) {
                var grid = $('#FleetRequestVehicleGrid').data('kendoGrid');
                grid.dataSource.read();
            });
            $("body").delegate(".modalClickMainLabour", "click", function(e) {
                $('#modelWindowMaintLabour').html('');
                e.preventDefault();

                var link = $(this).attr("href");
                var clickedId = $(this).attr("id");
                var frameTitle = $(this).attr("frameTitle");
                if ($(this).hasClass("createNewMaintLabour")) {
                    link = "@Url.Action("FleetRequestVehicleCreate", "FleetRequestVehicle", new {fleetRequestId = Model.FleetRequestId})";
                }
                else if ($(this).hasClass("details") == true) {
                    link = "@Url.Action("FleetRequestVehicleDetails", "FleetRequestVehicle", new {fleetRequestVehicleId = -1})";
                    link = link.replace("-1", clickedId);
                } else if ($(this).hasClass("edit")) {
                    link = "@Url.Action("FleetRequestVehicleUpdate", "FleetRequestVehicle", new {fleetRequestVehicleId = -1})";
                    link = link.replace("-1", clickedId);
           
                }
                $("#modelWindowMaintLabour_wnd_title").html(frameTitle);

                var windowWidget = $("#modelWindowMaintLabour").data("kendoWindow");
                var closeOrigin = windowWidget.close;

                windowWidget.refresh({
                    url: link
                }).center();
                windowWidget.center();
                windowWidget.open();
               
            });
        }

        function DeleteFleetRequestVehicle(m) {
            var token = $('input[name="__RequestVerificationToken"]').val();
            
            DeleteConfirm(function() {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("FleetRequestVehicleDelete", "FleetRequestVehicle")",
                    data: { FleetRequestVehicleId: m, "__RequestVerificationToken": token },
                    traditional: true,
                    success: function(result) {
                        if (result.Status == 0)
                            SetErrorMessage(result.Message);
                        else {
                            var grid = $('#FleetRequestVehicleGrid').data('kendoGrid');
                            grid.dataSource.read();
                            SetSuccessMessage(result.Message);
                        }
                    },
                    dataType: "json"
                });
            });
        }

    </script>

@*scripts end*@

    
@*grid start*@
    <div class="kendoGridDiv" id="grd2">
        @(Html.Kendo().Grid<FleetRequestVehicleListModel>()
              .Name("FleetRequestVehicleGrid")

              .Columns(columns =>
              {
                  columns.Bound(p => p.FleetRequestVehicleId).ClientTemplate("<center><a class='details modalClickMainLabour' id='#=FleetRequestVehicleId#' frameTitle='" + CommonUtility.GetResourceValue("FleetRequestVehicle_PageTitle_Details") + "' href='" + Url.Action("FleetRequestVehicleDetails", "FleetRequestVehicle") + "?FleetRequestVehicleId=#=FleetRequestVehicleId#'><img class=iconLink src='" + Url.Content("~/Images/view.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.FleetRequestVehicle.FleetRequestVehicleDetails));
                  columns.Bound(p => p.FleetRequestVehicleId).ClientTemplate("<center><a class='edit modalClickMainLabour' id='#=FleetRequestVehicleId#' frameTitle='" + CommonUtility.GetResourceValue("FleetRequestVehicle_PageTitle_Update") + "' href='" + Url.Action("FleetRequestVehicleUpdate", "FleetRequestVehicle") + "?FleetRequestVehicleId=#=FleetRequestVehicleId#'><img class=iconLink src='" + Url.Content("~/Images/edit.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Update")).Width(60).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.FleetRequestVehicle.FleetRequestVehicleUpdate) && Model.FleetRequestStatus == 0);
                  columns.Bound(o => o.FleetRequestVehicleId).ClientTemplate("<center><a href='javascript:void(0);' id='#=FleetRequestVehicleId#' frameTitle='" + CommonUtility.GetResourceValue("FleetRequestVehicle_PageTitle_Delete") + "' onclick='DeleteFleetRequestVehicle(#=FleetRequestVehicleId#)' ><img class=iconLink src='" + Url.Content("~/Images/delete.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Delete")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.FleetRequestVehicle.FleetRequestVehicleDelete) && Model.FleetRequestStatus == 0);
                  columns.Bound(p => p.CustomerName).Width(150).Sortable(true);
                  columns.Bound(p => p.VehicleName).Width(120).Sortable(true);
                  columns.Bound(p => p.ModelName).Width(120).Sortable(true);
                  columns.Bound(p => p.IsWarranty).Width(120).Sortable(true);
                  columns.Bound(p => p.FleetName).Width(120).Sortable(true);
                  columns.Bound(p => p.DocumentName).ClientTemplate(string.Format("<center><a class='k-link2'  href='{0}/#=DocumentId#'>#=DocumentName#</a></center>", Url.Action("DownloadVehicleDocument"))).Width(120).Sortable(true);
              })
              .Pageable()
              .Sortable()
              .Scrollable()


              .DataSource(dataSource => dataSource
                  .Ajax()
                  .PageSize(ODMSCommon.CommonValues.GridPageSize.Short)
                  .ServerOperation(true)
                  .Read(read => read.Action("ListFleetRequestVehicles", "FleetRequestVehicle",new{fleetRequestId=Model.FleetRequestId})))
              )
                                        


    </div>
@*grid end*@

@*modelWindow start*@
    <div id="modelWindowDiv">
        @(Html.Kendo().Window()
              .Name("modelWindowMaintLabour")
              .Draggable()
              .Resizable()
              .Width(950)
              .Height(250)
              .Visible(false)
              .Modal(true)
              .Iframe(true)
              .Events(ev => ev.Close(@"function(e){
         var grid = $('#FleetRequestVehicleGrid').data('kendoGrid');      
        grid.dataSource.read();
    }"))
              )
    </div>
@*modelWindow end*@


}
else
{
    <script type="text/javascript">
        SetErrorMessage("@MessageResource.Error_DB_NoRecordFound");
    </script>
}