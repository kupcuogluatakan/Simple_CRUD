@model PdiGifApproveGroupViewModel
@using ODMSBusiness
@using ODMSCommon.Resources
@using ODMSModel.PdiGifApproveGroup
@{
    ViewBag.Title = MessageResource.PdiGifApproveGroup_PageTitle_Index;
}
@Html.AntiForgeryToken()
@*search start*@
<div id="showSearch">@MessageResource.Global_Display_Search_Criteria</div>
<div id="searchDiv">
    <div id="searchFields">
        <div class="labelDiv">@Html.LabelFor(c=>c.GroupName)</div>
        <div class="shortTxtDiv">@Html.TextBoxFor(c=>c.GroupName) </div>
        <div class="labelDiv">@Html.LabelFor(c=>c.MailList)</div>
        <div class="shortTxtDiv">@Html.TextAreaFor(c=>c.MailList) </div>
        <div class="labelDiv">@Html.LabelFor(c => c.IsActive)</div>
        <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c=>c.SearchIsActive).BindTo(CommonBL.ListStatus().Data).DataTextField("Text").DataValueField("Value").Placeholder(MessageResource.Global_Display_All)  </div>
        <div class="clearDiv">&nbsp;</div>
    </div>
</div> 
@*serach end*@
@ODMSHelpers.LinkButton("btnSearch", CommonUtility.GetResourceValue("Global_Display_Search"), "", "", "",CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupIndex)
@ODMSHelpers.LinkButton("btnCreate", CommonUtility.GetResourceValue("Global_Display_New"), "Create", "modalClick createNew", CommonUtility.GetResourceValue("PdiGifApproveGroup_PageTitle_Create"),CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupCreate)

@*grid start*@
<div class="kendoGridDiv" id="grd">
    @(Html.Kendo().Grid<PdiGifApproveGroupListModel>()
          .Name("grid")

          .Columns(columns =>
              {
                  columns.Bound(p => p.GroupId).ClientTemplate("<center><a class='loadTab' onclick='ShowTabs(#=GroupId#);' id='#=GroupId#'><img class=iconLink src='" + Url.Content("~/Images/tabs.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Details")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupDetails));
                  columns.Bound(p => p.GroupId).ClientTemplate("<center><a class='details modalClick' id='#=GroupId#' frameTitle='" + CommonUtility.GetResourceValue("PdiGifApproveGroup_PageTitle_Details") + "' href='" + Url.Action("PdiGifApproveGroupDetails", "PdiGifApproveGroup") + "/#=GroupId#'><img class='iconLink' src='" + Url.Content("~/Images/view.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupDetails));
                  columns.Bound(p => p.GroupId).ClientTemplate("<center><a class='edit modalClick' id='#=GroupId#' frameTitle='" + CommonUtility.GetResourceValue("PdiGifApproveGroup_PageTitle_Update") + "' href='" + Url.Action("PdiGifApproveGroupUpdate", "PdiGifApproveGroup") + "/#=GroupId#'><img class='iconLink' src='" + Url.Content("~/Images/edit.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Update")).Width(60).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupUpdate));
                  columns.Bound(o => o.GroupId).ClientTemplate("<center><a  id='#=GroupId#' frameTitle='" + CommonUtility.GetResourceValue("PdiGifApproveGroup_PageTitle_Delete") + "' onclick='DeletePdiGifApproveGroup(#=GroupId#);' href='javascript:void(0);'><img class='iconLink' src='" + Url.Content("~/Images/delete.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Delete")).Width(50).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PdiGifApproveGroup.PdiGifApproveGroupDelete));
                  columns.Bound(p => p.GroupName).Width(120).Sortable(true);
                  columns.Bound(p => p.MailList).Width(100).Sortable(true);
                  columns.Bound(p => p.IsActiveString).Width(120).Sortable(true);
              })
          .Pageable()
          .Sortable()
          .Scrollable()
           

          .DataSource(dataSource => dataSource
                                        .Ajax()
                                        .PageSize(10)
                                        .ServerOperation(true)
                                        .Read(read => read.Action("ListPdiGifApproveGroup", "PdiGifApproveGroup", Model).Data("PdiGifApproveGroupSearch"))
                                        .Model(model => model.Field(o => o.GroupId).DefaultValue(-1)))

          )
</div>
@*grid end*@

@*modelWindow start*@
