        @(Html.Kendo().Window()
              .Name("modelWindow")
              .Title("Customer")
              .Draggable()
              .Resizable()
              .Width(950)
              .Height(250)
              .Visible(false)
              .Modal(true)
              .Iframe(true)
              .Events(ev => ev.Close(@"function(e){
         var grid = $('#grid').data('kendoGrid');      
