@model ODMSModel.SparePartType.SparePartTypeIndexViewModel
@{
    ViewBag.Title = CommonUtility.GetResourceValue("SparePartType_PageTitle_Create");
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

 
@using (Html.BeginForm("SparePartTypeCreate", "SparePartType", FormMethod.Post))
{
    <div class="labelDiv">@Html.LabelFor(v => v.PartTypeCode)</div>
    <div class="shortTxtDiv">@Html.TextBoxFor(v => v.PartTypeCode) @Html.ValidationMessageFor(v => v.PartTypeCode) </div>

    <div class="clearDiv">&nbsp;</div>

    <div class="labelDiv">@Html.LabelFor(v => v.PartTypeName)</div>
    <div class="shortTxtDiv">@{ Html.RenderAction("MultiLanguageTextbox", "MultiLanguage", new { DefaultText = Model.MultiLanguageContentAsText, IsEnabled = true }); }
        @Html.ValidationMessageFor(v => v.MultiLanguageContentAsText) 
    </div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.AdminDesc)</div>
    <div class="shortTxtDiv">@Html.TextBoxFor(v => v.AdminDesc) @Html.ValidationMessageFor(v => v.AdminDesc) </div>

    <div class="clearDiv">&nbsp;</div>

    <div class="labelDiv">@Html.LabelFor(c => c.IsActiveName)</div>
    <div class="shortTxtDiv">@Html.CheckBoxFor(v => v.IsActive)  </div>
   @Html.HiddenFor(v => v.IsActive)
    <div class="clearDiv">&nbsp;</div>
    @ODMSHelpers.Button("Create", CommonUtility.GetResourceValue("Global_Display_Save"), CommonValues.PermissionCodes.SparePartType.SparePartTypeCreate, "SparePartTypeCreate")        
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#PartTypeCode').bind('keypress', function (event) {
            var regex = new RegExp("^[a-zA-Z0-9]+$");
            var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
            if (!regex.test(key)) {
                event.preventDefault();
                return false;
            }
        });

        $('form').each(function () {
            var validator = $(this).data('validator');
            if (validator && validator.settings) {
                validator.settings.ignore = "";
            }
        });
    });
</script>


<script>
    $(function () {
        adjustPage();
    });

    function adjustPage() {
        $("#popupContent").css("width", 500);
    }
</script>
