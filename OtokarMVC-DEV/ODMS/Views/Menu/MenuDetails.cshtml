@{
    ViewBag.Title = CommonUtility.GetResourceValue("Menu_PageTitle_Details");
}
@{
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}


@model ODMSModel.Menu.MenuIndexViewModel
 
<div class="labelDiv">@Html.LabelFor(v => v.LinkName)</div>
<div class="shortTxtDiv">&nbsp;@Html.DisplayFor(v => v.LinkName) &nbsp;</div>
