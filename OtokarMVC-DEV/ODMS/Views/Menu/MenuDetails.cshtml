<div class="shortTxtDiv">@Html.DisplayFor(v => v.Status) &nbsp;</div>
<div class="clearDiv">&nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.OrderNo)</div>
<div class="shortTxtDiv">@Html.DisplayFor(v => v.OrderNo) &nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.MenuText)</div>
<div class="shortTxtDiv">@{ Html.RenderAction("MultiLanguageTextbox", "MultiLanguage", new { DefaultText = Model.MultiLanguageContentAsText, IsEnabled = false }); }</div>

