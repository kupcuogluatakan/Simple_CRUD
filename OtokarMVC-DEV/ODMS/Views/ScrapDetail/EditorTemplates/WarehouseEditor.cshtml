@(Html.Kendo().ComboBoxFor(m => m)
      .AutoBind(false)
      .DataTextField("Text")
      .DataValueField("Value")
      .DataSource(dataSource =>dataSource.Read(read => read.Action("GetWarehouses", "ScrapDetail").Data("getStockTypeID()"))
                                .ServerFiltering(true)
      ).CascadeFrom("StockTypeId")
            .Events(e=>e.Change("SetWarehouseID"))
      )