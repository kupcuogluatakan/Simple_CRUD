@using ODMSCommon.Resources

@model ODMSModel.VehicleBodywork.VehicleBodyworkListModel

@{
    ViewBag.Title = MessageResource.VehicleBodywork_PageTitle_Index;
}

<script src="~/Scripts/jquery.maskedinput.js"></script>
<script src="~/Scripts/odms.objectsearch.js"></script>
 
<div id="showSearch">@MessageResource.Global_Display_Search_Criteria</div>
<div id="searchDiv">
    <div id="searchFields">
        <div class="labelDiv">@Html.LabelFor(v => v.VehicleId)</div>
        <div class="shortTxtDivObjectSearch">@Html.Partial("~/Views/ObjectSearch/ObjectSearch.cshtml", 
        new ODMSModel.ObjectSearch.ObjectSearchModel{
            ObjectSearchType = CommonValues.ObjectSearchType.Vehicle, 
            WindowTitle = ODMSCommon.Resources.MessageResource.ObjectSearch_WindowTitle_Vehicle, 
            ReferenceObjectId = "VehicleId", 
            ClearCallBackFunction=null, 
            SelectCallBackFunction=null, 
            Required=true, 
            ReferenceObjectValue = Model==null ? null : Model.VehicleId
        })</div>
        <div class="labelDiv">@Html.LabelFor(v => v.DealerName)</div>
        <div class="shortTxtDiv">
            @Html.Kendo().ComboBoxFor(v => v.DealerId).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.DealerList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose"))
        </div>

        <div class="clearDiv">&nbsp;</div>
        <div class="labelDiv">@Html.LabelFor(v => v.BodyworkCode)</div>
         <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.BodyworkCode).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.BodyworkList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose"))</div> 
    </div>
</div>


@ODMSHelpers.LinkButton("btnSearch", MessageResource.Global_Display_Search, "", "", "", CommonValues.PermissionCodes.VehicleBodywork.VehicleBodyworkIndex)
@ODMSHelpers.LinkButton("btnCreate", MessageResource.Global_Display_New, "Create", "modalClick createNew", MessageResource.VehicleBodywork_PageTitle_Create, CommonValues.PermissionCodes.VehicleBodywork.VehicleBodyworkCreate)


<br />
<div id="modelWindowDiv">
    @(Html.Kendo().Window()
        .Name("modelWindow")
     .Draggable()
    .Resizable()
    .Width(950)
    .Height(350)
    .Visible(false)
    .Modal(true)
    .Iframe(true)
    .Events(ev => ev.Close(@"function(e){
         var grid = $('#grid').data('kendoGrid');
        grid.dataSource.page(1);
    }"))
    )
</div>

<script src="~/Scripts/jquery.maskedinput.js"></script>

<script type="text/javascript">

    function Search() {
        return {
            VehicleId: $('#VehicleId').val(),
            DealerId: $('#DealerId').val(),
            BodyworkCode: $('#BodyworkCode').val()
        };
    }

    $(document).ready(function () {

        $("body").delegate("#btnSearch", "click", function (e) {
            var grid = $('#grid').data('kendoGrid');
            grid.dataSource.page(1);

        });
        $("body").delegate("#showSearch", "click", function (e) {
            var IsVisible = Boolean($(this).hasClass("searchVisible"));

            if (!IsVisible) {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Hide_Search_Criteria")');
                $(this).addClass("searchVisible");
                $("#searchDiv").show("slow");
            }
            else {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Search_Criteria")');
                $(this).removeClass("searchVisible");
                $("#searchDiv").hide("slow");
            }
        });
        $("body").delegate(".modalClick", "click", function (e) {
            $('#modelWindow').html('');
            e.preventDefault();

            var link;
            var clickedId = $(this).attr("id");
            var frameTitle = $(this).attr("frameTitle");
            if ($(this).hasClass("details") == true) {
                link = "@Url.Action("VehicleBodyworkDetails", "VehicleBodywork", new { vehicleBodyworkId = -1 })";
                link = link.replace("-1", clickedId);
            }
            else if ($(this).hasClass("edit")) {
                link = "@Url.Action("VehicleBodyworkUpdate", "VehicleBodywork", new { vehicleBodyworkId = -1 })";
                link = link.replace("-1", clickedId);
            }
            else if ($(this).hasClass("createNew")) {
                link = "@Url.Action("VehicleBodyworkCreate", "VehicleBodywork")";
            }
            $("#modelWindow_wnd_title").html(frameTitle);

            var windowWidget = $("#modelWindow").data("kendoWindow");
            var closeOrigin = windowWidget.close;

            windowWidget.refresh({
                url: link
            }).center();
            windowWidget.center();
            windowWidget.open();
            
        });

    });
function DeleteVehicleBodywork(vbId) {
    DeleteConfirm(function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteVehicleBodywork", "VehicleBodywork")",
            data: { vehicleBodyworkId: vbId },
            traditional: true,
            success: function (result) {
                if (result.Status == 0)
                    SetErrorMessage(result.Message);
                else {
                    var grid = $('#grid').data('kendoGrid');
                    grid.dataSource.read();
                    SetSuccessMessage(result.Message);
                }
            },
            dataType: "json"
        });
    });
}
</script>


<div class="kendoGridDiv" id="grd">
    @(Html.Kendo().Grid<ODMSModel.VehicleBodywork.VehicleBodyworkListModel>()
          .Name("grid")
          .Columns(columns =>
              {
                  columns.Bound(p => p.VehicleBodyworkId).ClientTemplate("<center><a class='details modalClick' id='#=VehicleBodyworkId#' frameTitle='" + CommonUtility.GetResourceValue("VehicleBodywork_PageTitle_Details") + "' href='/VehicleBodywork/VehicleBodyworkDetails/#=VehicleBodyworkId#'><img class=iconLink src='" + @Url.Content("~/Images/view.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.VehicleBodywork.VehicleBodyworkDetails));
                  columns.Bound(p => p.VehicleBodyworkId).ClientTemplate("<center><a class='edit modalClick' id='#=VehicleBodyworkId#' frameTitle='" + CommonUtility.GetResourceValue("VehicleBodywork_PageTitle_Update") + "' href='/VehicleBodywork/VehicleBodyworkUpdate/#=VehicleBodyworkId#'><img class=iconLink src='" + @Url.Content("~/Images/edit.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Update")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.VehicleBodywork.VehicleBodyworkUpdate));
                  columns.Bound(p => p.VehicleBodyworkId).ClientTemplate("<center><a href='javascript:void(0);' frameTitle='" + CommonUtility.GetResourceValue("VehicleBodywork_PageTitle_Delete") + "' onclick='DeleteVehicleBodywork(#=VehicleBodyworkId#);'><img class='iconLink' src='" + Url.Content("~/Images/delete.png") + "'/></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Delete")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.VehicleBodywork.VehicleBodyworkDelete));
                  columns.Bound(p => p.BodyworkCode).Sortable(true); 
                  columns.Bound(p => p.BodyworkName).Sortable(true);
                  columns.Bound(p => p.CountryName).Sortable(true);
                  columns.Bound(p => p.CityName).Sortable(true);
                  columns.Bound(p => p.DealerName).Sortable(true);
                  columns.Bound(p => p.WorkOrderName).Sortable(true);
                  columns.Bound(p => p.VehiclePlate).Sortable(true);
                  columns.Bound(p => p.VinNo).Sortable(true);
                  columns.Bound(p => p.Manufacturer).Sortable(true);
              })
          .Pageable()
          .Sortable()
          .Scrollable()
          .DataSource(dataSource => dataSource
                                        .Ajax()
                                        .PageSize(10)
                                        .ServerOperation(true)
                                        .Read(read => read.Action("ListVehicleBodywork", "VehicleBodywork", Model).Data("Search"))
                                        .Model(model => model.Field(o => o.VehicleBodyworkId).DefaultValue(-1)))

          )
</div>
