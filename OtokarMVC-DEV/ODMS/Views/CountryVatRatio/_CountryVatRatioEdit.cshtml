@model ODMSModel.CountryVatRatio.CountryVatRatioViewModel
 
<link href="~/Style/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/custom.js"></script>
<style type="text/css">
    #popupContentWrapper{ min-height: 360px !important;}
    #popupContent{ width: 480px !important;}
</style>
@Html.AntiForgeryToken()

<div class="labelDiv">@Html.LabelFor(v => v.CountryId)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.CountryId).BindTo(ViewBag.CountryList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.CountryId) </div>
<div class="clearDiv">&nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.PartVatRatio)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.PartVatRatio).BindTo(ViewBag.VatRatioList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.PartVatRatio)
</div>
<div class="clearDiv">&nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.LabourVatRatio)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.LabourVatRatio).BindTo(ViewBag.VatRatioList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.LabourVatRatio)
</div>
<div class="clearDiv">&nbsp;</div>
<script type="text/javascript">
    $(document).ready(function () {

        if ($('#CountryName').val() == null) {
            $("#CountryId").data("kendoComboBox").text('');
            $("#LabourVatRatio").data("kendoComboBox").text('');
            $("#PartVatRatio").data("kendoComboBox").text('');
        }

        $('form').each(function () {
            var validator = $(this).data('validator');
            if (validator && validator.settings) {
                validator.settings.ignore = "";
            }
        });
    });

</script>