@{
    ViewBag.Title = MessageResource.FleetVehicle_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}
@using ODMSCommon.Resources
@using ODMSModel.FleetVehicle
@model FleetVehicleViewModel
@using (Html.BeginForm("FleetVehicleUpdate", "FleetVehicle", FormMethod.Post))
{
    Html.RenderPartial("_FleetVehicleEdit", Model);

    @Html.HiddenFor(c => c.FleetId)
    <input type="hidden" name="FleetVehicleId" id="FleetVehicleId" value="@Model.FleetVehicleId"/>
    @ODMSHelpers.Button("Update", CommonUtility.GetResourceValue("Global_Display_Update"), CommonValues.PermissionCodes.FleetVehicle.FleetVehicleUpdate, "FleetVehicleUpdate")
}
 