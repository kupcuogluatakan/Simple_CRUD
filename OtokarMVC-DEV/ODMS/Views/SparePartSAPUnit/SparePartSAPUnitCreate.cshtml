@using ODMSCommon.Resources

@model ODMSModel.SparePartSAPUnit.SparePartSAPUnitViewModel

@{
    ViewBag.Title = CommonUtility.GetResourceValue("SparePartSAPUnit_PageTitle_Create");
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

<script src="~/Scripts/UI_Scripts/SparePartSAPUnit.js"></script>


@using (Html.BeginForm("SparePartSAPUnitCreate", "SparePartSAPUnit", FormMethod.Post))
{
    <div class="labelDiv">@Html.LabelFor(v => v.SparePartCode)</div>
    <div class="shortTxtDiv special">
        @(Html.Action("AutocompleteSearch", "AutocompleteSearch", new { SearchType = "SparePart", ControlId = "PartId", Title1 = "", Title2 = "", DefaultText = Model != null ? Model.txtPartId : "", DefaultValue = Model != null ? Model.PartId.ToString() : "", ExtraParameter = ODMSCommon.Security.UserManager.UserInfo.GetUserDealerId() })) @Html.ValidationMessageFor(c => c.PartId)
    </div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.UnitName)</div>
    <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.UnitId).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.UnitsList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.UnitId)</div>


    <div class="labelDiv">@Html.LabelFor(v => v.ShipQuantity)</div>
    @Html.Kendo().NumericTextBoxFor(v => v.ShipQuantity).Min(1).Value(1).HtmlAttributes(new { type = "text" }) @Html.ValidationMessageFor(c => c.ShipQuantity)
    
    <div class="clearDiv">&nbsp;</div>

        <div class="labelDiv">@Html.LabelFor(c => c.StateName)</div>
        <div class="shortTxtDiv">@Html.CheckBoxFor(v => v.IsActive)  </div>

        <div class="clearDiv">&nbsp;</div>


        <div class="shortTxtDiv">
            @ODMSHelpers.Button("Save", CommonUtility.GetResourceValue("Global_Display_Save"), CommonValues.PermissionCodes.SparePartSAPUnit.SparePartSAPUnitCreate, "SparePartSAPUnitCreate")
        </div>
}

