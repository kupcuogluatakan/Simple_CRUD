@using ODMSCommon;

@model HandleErrorInfo

@{
    ViewBag.Title = @CommonUtility.GetResourceValue("lblGeneralError");
}

<hgroup class="title">
    <h1 class="error">@CommonUtility.GetResourceValue("lblGeneralError")</h1>
    <h2 class="error">@CommonUtility.GetResourceValue("lblGeneralErrorDetail")</h2>
    @if (Model != null)
    {
        <h3 class="error">@Model.ControllerName</h3>
        <h3 class="error">@Model.ActionName</h3>
        <h4 class="error">@Model.Exception.Message</h4>
        <h4 class="error">@Model.Exception.StackTrace</h4>
    }
</hgroup>
