@model ODMSModel.ClaimDismantledPartDelivery.ClaimDismantledPartDeliveryViewModel

@{
    ViewBag.Title = CommonUtility.GetResourceValue("ClaimDismantledPartDelivery_PageTitle_Details");
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

@using (Html.BeginForm("ClaimDismantledPartDeliveryDetails", "ClaimDismantledPartDelivery", FormMethod.Post))
{
    <div class="labelDiv">@Html.LabelFor(v => v.ClaimWayBillNo)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.ClaimWayBillNo)</div>

    <div class="clearDiv">&nbsp;</div>

    <div class="labelDiv">@Html.LabelFor(v => v.ClaimWayBillSerialNo)</div>
    <div class="shortTxtDiv"> @Html.DisplayFor(v => v.ClaimWayBillSerialNo)</div>

    <div class="clearDiv">&nbsp;</div>

    <div class="labelDiv">@Html.LabelFor(v => v.ClaimWayBillDate)</div>
    <div class="shortTxtDiv" id="date">@Html.DisplayFor(v => v.ClaimWayBillDate) </div>
}

<script>

    $(function () {
        adjustPage();
    });

    function adjustPage() {
        $("#popupContent").css("width", 450);
        $("#popupContentWrapper").css("min-height", 300);
        $("#popupContentWrapper").css("width", 460);
    }
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#date").text($("#date").text().replace(".", "/").replace(".", "/"));
    });
</script>
