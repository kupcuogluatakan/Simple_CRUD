@using ODMSCommon.Resources
@model ODMSModel.Proficiency.ProficiencyDetailModel
@{
    ViewBag.Title = MessageResource.Proficiency_PageTitle_Details;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}
<link href="~/Style/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("ProficiencyDetails", "Proficiency", FormMethod.Post))
{
    <div id="tagCodeDiv" class="labelDiv" style="position: absolute; margin-top: 10px; width: 100px">@Html.LabelFor(d => d.ProficiencyCode)</div>
    <div id="txtCodeDiv" class="shortTxtDiv" style="position: absolute; margin-top: 10px; margin-left: 100px;">@Html.DisplayFor(d => d.ProficiencyCode)&nbsp;</div>
    
    <div id="tagNameDiv" class="labelDiv" style="width: 100px; margin-top: 40px;">@Html.LabelFor(d => d.ProficiencyName)</div>
    <div id="txtNameDiv" class="shortTxtDiv" style="position: absolute; margin-left: 100px; margin-top: 40px;">@Html.DisplayFor(d => d.ProficiencyName)&nbsp;</div>
    
    <div id="tagDescriptionDiv" class="labelDiv" style="position: absolute; margin-top: 70px; width: 100px">@Html.LabelFor(d => d.Description)</div>
    <div id="txtDescriptionDiv" class="shortTxtDiv" style="margin-left: 100px; position: absolute; margin-top: 70px;">@Html.DisplayFor(d => d.Description)&nbsp;</div>
  
}

<script>
    $(function () {
        adjustPage();
    });

    function adjustPage() {
        $("#popupContent").css("width", 440);
        $("#popupContentWrapper").css("min-height", 100);
        $("#popupContentWrapper").css("height", 400);
        $("#popupContentWrapper").css("width", 500);
    }
</script>
