@using ODMSCommon.Resources
@using ODMSModel.PDIControlPartDefinition
@model ODMSModel.PDIControlPartDefinition.PDIControlPartDefinitionListModel

@{
    ViewBag.Title = MessageResource.PDIControlPartDefinition_PageTitle_Index;
}

 
@Html.AntiForgeryToken()
<div id="showSearch">@MessageResource.Global_Display_Search_Criteria</div>
<div id="searchDiv">
    <div id="searchFields">
        <div class="labelDiv">@Html.LabelFor(v => v.PDIPartCode)</div>
        <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.PDIPartCode).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.PartList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) </div>
        <div class="labelDiv">@Html.LabelFor(v => v.PDIControlModelCode)</div>
        <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.IdPDIControlDefinition).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.ControlModelCodeList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) </div>
        <div class="clearDiv">&nbsp;</div>
        <div class="labelDiv">@Html.LabelFor(v => v.IsActiveName)</div>
        <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.IsActive).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.ActiveYesNoList as List<SelectListItem>).Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) </div>
    </div>
</div>
    @ODMSHelpers.LinkButton("btnSearch", MessageResource.Global_Display_Search, "", "", "", CommonValues.PermissionCodes.PDIControlPartDefinition.PDIControlPartDefinitionIndex)
    @ODMSHelpers.LinkButton("btnCreate", MessageResource.Global_Display_New, "Create", "modalClick createNew", MessageResource.PDIControlPartDefinition_PageTitle_Create, CommonValues.PermissionCodes.PDIControlPartDefinition.PDIControlPartDefinitionCreate)
    @Html.Partial("_ExcelExport",new ODMS.Model.ExportModel())
<br />
<div id="PDIControlPartDefinitionModelWindowDiv">
    @(Html.Kendo().Window()
        .Name("PDIControlPartDefinitionModelWindow")
     .Draggable()
    .Resizable()
    .Width(950)//.Width(950)
    .Height(350)//.Height(440)
    .Visible(false)
    .Modal(true)
    .Iframe(true)
    .Events(ev => ev.Close(@"function(e){
         var grid = $('#PDIControlPartDefinitionGrid').data('kendoGrid');
        grid.dataSource.page(1);
    }"))
    )
</div>

<script src="~/Scripts/jquery.maskedinput.js"></script>
<script type="text/javascript">
    
    function DeletePDIControlPartDefinition(aId,partCode) {
        var token = $('input[name="__RequestVerificationToken"]').val();
        
        DeleteConfirm(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeletePDIControlPartDefinition", "PDIControlPartDefinition")",
                data: { id: aId,partCode:partCode, "__RequestVerificationToken": token },
                traditional: true,
                success: function (result) {
                    if (result.Status == 0)
                        SetErrorMessage(result.Message);
                    else {
                        var grid = $('#PDIControlPartDefinitionGrid').data('kendoGrid');
                        grid.dataSource.page(1);
                        SetSuccessMessage(result.Message);
                    }
                },
                dataType: "json"
            });
        });
    }


    $(document).ready(init);
    function GetParameters()
    {
        return {
            ReportType: 11,
            Columns: "PDIControlCode,PDIModelCode,PDIPartCode"
        };
    }
    function init() {

        $("body").delegate("#btnSearch", "click", function (e) {
            var grid = $('#PDIControlPartDefinitionGrid').data('kendoGrid');
            grid.dataSource.page(1);

        });
        $("body").delegate("#showSearch", "click", function (e) {
            var IsVisible = Boolean($(this).hasClass("searchVisible"));

            if (!IsVisible) {
                $(this).html('@MessageResource.Global_Display_Hide_Search_Criteria');
                $(this).addClass("searchVisible");
                $("#searchDiv").show("slow");
            }
            else {
                $(this).html("@MessageResource.Global_Display_Search_Criteria");
                $(this).removeClass("searchVisible");
                $("#searchDiv").hide("slow");
            }
        });
        $("body").delegate(".modalClick", "click", function (e) {
            $('#PDIControlPartDefinitionModelWindow').html('');
            e.preventDefault();

            var link;
            var clickedId = $(this).attr("id");
            var idList = clickedId.split("$");
            var id = idList[0];
            var partCodeParam = idList[1];
            var frameTitle = $(this).attr("frameTitle");
            if ($(this).hasClass("details") == true) {
                link = "@Url.Action("PDIControlPartDefinitionDetails", "PDIControlPartDefinition", new { id = -1, partCode = -2 })";
                link = link.replace("-1", id);
                link = link.replace("-2", partCodeParam);
            }
            else if ($(this).hasClass("edit")) {
                link = "@Url.Action("PDIControlPartDefinitionUpdate", "PDIControlPartDefinition", new {  id = -1, partCode = -2  })";
                link = link.replace("-1", id);
                link = link.replace("-2", partCodeParam);
                }
            else if ($(this).hasClass("createNew")) {
                link = "@Url.Action("PDIControlPartDefinitionCreate", "PDIControlPartDefinition")";
            }
            $("#PDIControlPartDefinitionModelWindow_wnd_title").html(frameTitle);

                var windowWidget = $("#PDIControlPartDefinitionModelWindow").data("kendoWindow");
                var closeOrigin = windowWidget.close;

                windowWidget.refresh({
                    url: link
                }).center();
                windowWidget.center();
                windowWidget.open();
                
            });
        }

</script>

<div class="kendoGridDiv" id="grd">
    @(Html.Kendo().Grid<ODMSModel.PDIControlPartDefinition.PDIControlPartDefinitionListModel>()
          .Name("PDIControlPartDefinitionGrid")

          .Columns(columns =>
              {
                  columns.Bound(p => p.IdPDIControlDefinition).ClientTemplate("<center><a class='details modalClick' id='#=IdPDIControlDefinition#" + "$" + "#=PDIPartCode#" + "' frameTitle='" + CommonUtility.GetResourceValue("PDIControlPartDefinition_PageTitle_Details") + "' href='/PDIControlPartDefinition/PDIControlPartDefinitionDetails/#=IdPDIControlDefinition#'><img class=iconLink src='" + @Url.Content("~/Images/view.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PDIControlPartDefinition.PDIControlPartDefinitionDetails));
                  columns.Bound(p => p.IdPDIControlDefinition).ClientTemplate("<center><a class='edit modalClick' id='#=IdPDIControlDefinition#" + "$" + "#=PDIPartCode#" + "' frameTitle='" + CommonUtility.GetResourceValue("PDIControlPartDefinition_PageTitle_Update") + "' href='/PDIControlPartDefinition/PDIControlPartDefinitionUpdate/#=IdPDIControlDefinition#'><img class=iconLink src='" + @Url.Content("~/Images/edit.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Update")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PDIControlPartDefinition.PDIControlPartDefinitionUpdate));
                  columns.Bound(o => o.IdPDIControlDefinition).ClientTemplate("<center><a href='javascript:void(0);' frameTitle='" + MessageResource.PDIControlPartDefinition_PageTitle_Delete + "' onclick='DeletePDIControlPartDefinition(#=IdPDIControlDefinition#,\"#=PDIPartCode#\");'><img class='iconLink' src='" + Url.Content("~/Images/delete.png") + "'/></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Delete")).Width(100).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PDIControlPartDefinition.PDIControlPartDefinitionDelete));
                  columns.Bound(p => p.PDIControlCode).Sortable(true);
                  columns.Bound(p => p.PDIModelCode).Sortable(true);
                  columns.Bound(p => p.PDIPartCode).Sortable(true);
                  columns.Bound(p => p.IsActiveName).Sortable(true);
              })
          .Pageable()
          .Sortable()
          .Scrollable()


          .DataSource(dataSource => dataSource
                                        .Ajax()
                                        .PageSize(10)
                                        .ServerOperation(true)
                                        .Read(read => read.Action("ListPDIControlPartDefinition", "PDIControlPartDefinition", Model).Data("GetParameters"))
                                        .Model(model => model.Field(o => o.IdPDIControlDefinition).DefaultValue(-1)))

          )
</div>
