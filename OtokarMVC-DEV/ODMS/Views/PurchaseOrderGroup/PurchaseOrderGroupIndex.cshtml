@using ODMSBusiness
@using ODMSCommon.Resources
@using ODMSModel.PurchaseOrderGroup
@model PurchaseOrderGroupListModel

@{
    ViewBag.Title = CommonUtility.GetResourceValue("PurchaseOrderGroup_PageTitle_Index");
}


<script>

    function Search() {
        return {
            IsActive: $("#IsActive").val()
        };
    }

    //SearchScript
    $(document).ready(function () {

        $("#IsActive").val(1);


        $("body").delegate("#btnSearch", "click", function (e) {
            var grid = $('#PurchaseOrderGroupGrid').data('kendoGrid');
            grid.dataSource.page(1);

        });

        $("body").delegate("#showSearch", "click", function (e) {
            var IsVisible = Boolean($(this).hasClass("searchVisible"));

            if (!IsVisible) {
                $(this).html('@MessageResource.Global_Display_Hide_Search_Criteria');
                $(this).addClass("searchVisible");
                $("#searchDiv").show("slow");
            }
            else {
                $(this).html('@MessageResource.Global_Display_Search_Criteria');
                $(this).removeClass("searchVisible");
                $("#searchDiv").hide("slow");
            }
        });

        //Popup
        $("body").delegate(".modalClick", "click", function (e) {
            $('#modelWindow').html('');
            e.preventDefault();

            var link;
            var clickedId = $(this).attr("id");
            var frameTitle = $(this).attr("frameTitle");

            if ($(this).hasClass("details") == true) {
                link = "@Url.Action("PurchaseOrderGroupDetail", "PurchaseOrderGroup", new { id = -1 })";
                link = link.replace("-1", clickedId);
            }
            else if ($(this).hasClass("edit")) {
                link = "@Url.Action("PurchaseOrderGroupUpdate", "PurchaseOrderGroup", new { id = -1 })";
                link = link.replace("-1", clickedId);
            }
            else if ($(this).hasClass("createNew")) {
                link = "@Url.Action("PurchaseOrderGroupCreate", "PurchaseOrderGroup")";
            }

            $("#modelWindow_wnd_title").html(frameTitle);

            var windowWidget = $("#modelWindow").data("kendoWindow");

            windowWidget.refresh({
                url: link
            }).center();
            windowWidget.center();
            windowWidget.open();
            
        });

    });

    function Delete(Id) {
        DeleteConfirm(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("PurchaseOrderGroupDelete", "PurchaseOrderGroup")",
                data: {id:Id},
                traditional: true,
                success: function (result) {
                    if (result.Status == 0)
                        SetErrorMessage(result.Message);
                    else {
                        var grid = $('#PurchaseOrderGroupGrid').data('kendoGrid');
                        grid.dataSource.read();
                        SetSuccessMessage(result.Message);
                    }
                },
                dataType: "json"
            });
        });
    }

</script>



<div id="showSearch">@MessageResource.Global_Display_Search_Criteria</div>
<div id="searchDiv">
    <div id="searchFields">
        <div class="labelDiv">@Html.LabelFor(v => v.SearchIsActive)</div>
        <div class="shortTxtDiv">
            @Html.Kendo().ComboBoxFor(c => c.IsActive).BindTo(CommonBL.ListStatus().Data).DataTextField("Text").DataValueField("Value").Placeholder(MessageResource.Global_Display_All)
        </div>
    </div>
</div>
@ODMSHelpers.LinkButton("btnSearch", CommonUtility.GetResourceValue("Global_Display_Search"), "", "", "", null)
@ODMSHelpers.LinkButton("btnCreate", CommonUtility.GetResourceValue("Global_Display_New"), "Create", "modalClick createNew", CommonUtility.GetResourceValue("PurchaseOrderGroup_PageTitle_Create"), CommonValues.PermissionCodes.PurchaseOrderGroup.PurchaseOrderGroupCreate)


<div class="kendoGridDiv" id="grd">
    @(Html.Kendo().Grid<PurchaseOrderGroupListModel>()
          .Name("PurchaseOrderGroupGrid")
          .Columns(columns =>
    {
        columns.Bound(p => p.PurchaseOrderGroupId).ClientTemplate("<center><a class='details modalClick' id='#=PurchaseOrderGroupId#' frameTitle='" + @CommonUtility.GetResourceValue("PurchaseOrderGroup_PageTitle_Detail") + "' href='./PurchaseOrderGroupDetail/#=PurchaseOrderGroupId#'><img class=iconLink src='" + @Url.Content("~/Images/view.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_View")).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PurchaseOrderGroup.PurchaseOrderGroupDetail)).Width(2);
        columns.Bound(p => p.PurchaseOrderGroupId).ClientTemplate("<center><a class='edit modalClick' id='#=PurchaseOrderGroupId#' frameTitle='" + @CommonUtility.GetResourceValue("PurchaseOrderGroup_PageTitle_Update") + "' href='./PurchaseOrderGroupUpdate/#=PurchaseOrderGroupId#'><img class=iconLink src='" + @Url.Content("~/Images/edit.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Update")).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PurchaseOrderGroup.PurchaseOrderGroupUpdate)).Width(2);
        columns.Bound(o => o.PurchaseOrderGroupId).ClientTemplate("<center><a onclick='Delete(#=PurchaseOrderGroupId#)' href='javascript:void(0);' id='#=PurchaseOrderGroupId#' frameTitle='" + @CommonUtility.GetResourceValue("PurchaseOrderGroup_PageTitle_Delete") + "' ><img class=iconLink src='" + @Url.Content("~/Images/delete.png") + "'></a></center>").Title(CommonUtility.GetResourceValue("Global_Display_Delete")).Sortable(false).Visible(ODMSHelpers.UserHasPermission(CommonValues.PermissionCodes.PurchaseOrderGroup.PurchaseOrderGroupDelete)).Width(2);
        columns.Bound(p => p.GroupName).Width(200).Sortable(true);        
        columns.Bound(p => p.StateName).Width(200).Sortable(true);
    })
          .Pageable()
          .Sortable()
          .DataSource(dataSource => dataSource
              .Ajax()
              .PageSize(10)
              .ServerOperation(true)
              .Read(read => read.Action("Read", "PurchaseOrderGroup", Model).Data("Search"))
              .Model(model => model.Field(o => o.PurchaseOrderGroupId).DefaultValue(-1)))

    )
</div>



<div id="modelWindowDiv">
    @(Html.Kendo().Window()
        .Name("modelWindow")
        .Title("PurchaseOrderGroup")
        .Draggable()
        .Resizable()
        .Width(600)
        .Height(400)
        .Scrollable(false)
        .Visible(false)
        .Modal(true)
        .Iframe(true)
        .Events(ev => ev.Close(@"function(e){var grid = $('#PurchaseOrderGroupGrid').data('kendoGrid');grid.dataSource.page(1);}"))
    )
</div>