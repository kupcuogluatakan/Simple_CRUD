<div id="modelWindowDiv">
    @(Html.Kendo().Window()
                                        .Name("modelWindow")
                                     .Draggable()
                                    .Resizable()
                                    .Width(950)
                                    .Height(440)
                                    .Visible(false)
                                    .Modal(true)
                                    .Iframe(true)
                                    .Events(ev => ev.Close(@"function(e){
var grid = $('#CampaignRequestApproveGrid').data('kendoGrid');
grid.dataSource.page(1);
}"))
    )

</div>
<script>
    function Search() {
        return {
            ModelKod: $('#ModelKod').val(),
            RequestDealerId: $('#RequestDealerId').val(),
            SupplierDealerId: $('#SupplierDealerId').val(),
            SupplierTypeId: $('#SupplierTypeId').val(),
            CampaignCode: $('#CampaignCode').val(),
            RequestStatusId: $('#RequestStatusId').val()
        };
    }
    $(document).ready(function () {
        $("body").delegate("#btnSearch", "click", function (e) {
            var grid = $('#CampaignRequestApproveGrid').data('kendoGrid');
            grid.dataSource.page(1);

        });
        $("body").delegate("#showSearch", "click", function (e) {
            var IsVisible = Boolean($(this).hasClass("searchVisible"));

            if (!IsVisible) {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Hide_Search_Criteria")');
                $(this).addClass("searchVisible");
                $("#searchDiv").show("slow");
            }
            else {
                $(this).html('@CommonUtility.GetResourceValue("Global_Display_Search_Criteria")');
                $(this).removeClass("searchVisible");
                $("#searchDiv").hide("slow");
            }
        });
        $("body").delegate(".modalClickCampaignRequestApprove", "click", function (e) {
            $('#modelWindow').html('');
            e.preventDefault();

            var link;
            var clickedId = $(this).attr("id");
            var frameTitle = $(this).attr("frameTitle");
            if ($(this).hasClass("details") == true) {
                link = "@Url.Action("CampaignRequestApproveDetails", "CampaignRequestApprove", new { campaignRequestId = -1 })";
                link = link.replace("-1", clickedId);
            }
            else if ($(this).hasClass("edit")) {
                link = "@Url.Action("CampaignRequestApproveUpdate", "CampaignRequestApprove", new { campaignRequestId = -1 })";
                    link = link.replace("-1", clickedId);
                }
            $("#modelWindow_wnd_title").html(frameTitle);

            var windowWidget = $("#modelWindow").data("kendoWindow");
            var closeOrigin = windowWidget.close;

            windowWidget.refresh({
                url: link
            }).center();
            windowWidget.center();
            windowWidget.open();

        });

    });

    //_CampaignRequestApproveReject.cshtml içinden geliyor content
    function OpenRejectWindow(obj, campReqId) {

        var _model = {
            IdCampaignRequest: campReqId,
            token: $('input[name="__RequestVerificationToken"]').val()
        }

        CustomConfirm(function () {
            $("#CampaignRequestRejectWindow").html('');
            var wnd = $("#CampaignRequestRejectWindow").data("kendoWindow");

            wnd.refresh({
                url: '@Url.Action("CampaignRequestApproveReject")?IdCampaignRequest=' + _model.IdCampaignRequest + '&token=' + _model.token
            }).center();

            wnd.open();
    }, "@MessageResource.Global_Display_Reject", "@MessageResource.Global_Display_RejectConfirm", "@MessageResource.Global_Display_Yes", "@MessageResource.Global_Display_No");



    }

    function Approve(uid, campReqId, ApprovedIdCampaignRequest) {
        var token = $('input[name="__RequestVerificationToken"]').val();
        $('tr[data-uid="' + uid + '"] td').find('.iconLinkChange').attr('src', '@Url.Content("~/Images/ajax-loader.gif")');


        var warning = "@MessageResource.Global_Display_ApproveConfirm";

        if (ApprovedIdCampaignRequest != "")
        {
            warning = "@MessageResource.CampaignRequestApprove_Display_Already_Approved".replace("%REQUEST_ID%", ApprovedIdCampaignRequest);

        }

        CustomConfirm(
            function () {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("CampaignRequestApproveApprove", "CampaignRequestApprove")",
                    data: { id: campReqId,"__RequestVerificationToken": token  },
                traditional: true,
                success: function (result) {
                    if (result.Status == 0)
                        SetErrorMessage(result.Message);
                    else {
                        SetSuccessMessage('@MessageResource.Global_Display_Success');
                    }
                    var grid = $('#CampaignRequestApproveGrid').data('kendoGrid');
                    grid.dataSource.read();
                },
                dataType: "json"
            });
        }, "@MessageResource.Global_Display_Approve", warning, "@MessageResource.Global_Display_Yes", "@MessageResource.Global_Display_No");


    }
</script>
