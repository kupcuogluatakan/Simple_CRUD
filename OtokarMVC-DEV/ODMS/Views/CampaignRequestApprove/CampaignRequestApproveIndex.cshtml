            Columns: "CampaignRequestId,CampaignCode,CampaignName,ModelKod,RequestDealerName,RequestStatusName,SupplierTypeName,VinCodes,UpdateUserName,SupplierDealerName,Quantity,RequestNote"

        };
    }



    function showVins(vins) {

        $("#VinWindow").html('');
        var wnd = $("#VinWindow").data("kendoWindow");


        var newVins = "";
        $.each(vins.split(','), function () {
            newVins += this +" <br />"

        });

        $("#VinWindow").html(newVins);

        wnd.center().open();

    }
</script>

