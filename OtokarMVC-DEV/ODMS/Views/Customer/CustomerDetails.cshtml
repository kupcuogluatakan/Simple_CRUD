<div class="shortTxtDiv">@Html.DisplayFor(v => v.CustomerName) &nbsp;</div>
<div class="clearDiv">&nbsp;</div>
@if (Model.CustomerTypeId == 1)
{
    <div class="labelDiv">@Html.LabelFor(v => v.TaxOffice)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.TaxOffice) &nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.TaxNo)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.TaxNo) &nbsp;</div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.CompanyTypeName)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.CompanyTypeName) &nbsp;</div>
}
@if (Model.CustomerTypeId == 2)
{
    <div class="labelDiv">@Html.LabelFor(v => v.CustomerLastName)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.CustomerLastName) &nbsp;</div>
