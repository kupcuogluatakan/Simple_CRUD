    <div class="labelDiv">@Html.LabelFor(v => v.PassportNo)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.PassportNo) &nbsp;</div>
}
@if (Model.CustomerTypeId == 3)
{
    <div class="labelDiv">@Html.LabelFor(v => v.GovernmentTypeName)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.GovernmentTypeName) &nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.TaxOffice)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.TaxOffice) &nbsp;</div>
