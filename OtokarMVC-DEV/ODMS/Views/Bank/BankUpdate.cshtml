@using ODMSCommon.Resources
@model ODMSModel.Bank.BankDetailModel
@{
    ViewBag.Title = MessageResource.Bank_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

@using (Html.BeginForm("BankUpdate", "Bank", FormMethod.Post))
{
    <div class="labelDiv" style="width: 100px; margin-top: 10px;">@Html.LabelFor(b => b.Code)</div>
    <div class="shortTxtDiv" style="position: absolute; margin-left: 100px; margin-top: 10px; width: 100px">@Html.TextBoxFor(b => b.Code)
        @Html.ValidationMessageFor(v => v.Code)</div>
    <div class="labelDiv" style="position: absolute; margin-top: 40px; width: 100px">@Html.LabelFor(b => b.Name)</div>
    <div class="shortTxtDiv" style="position: absolute; margin-top: 40px; margin-left: 100px; width: 100px">@Html.TextBoxFor(b => b.Name) 
        @Html.ValidationMessageFor(v => v.Name)</div>
    <br/>
    @Html.HiddenFor(b => b.Id)
    @ODMSHelpers.Button("Update", MessageResource.Global_Display_Update, CommonValues.PermissionCodes.Bank.BankUpdate, "BankUpdate")        
}

<script>
    $(function () {
        adjustPage();
        adjustControlPositions();
    });
    
    function adjustPage() {
        $("#popupContent").css("width", 350);
        $("#popupContentWrapper").css("min-height", 100);
        $("#popupContentWrapper").css("height", 180);
        $("#popupContentWrapper").css("width", 360);
    }
    
    function adjustControlPositions() {
        $("#Update").css("position", "absolute");
        $("#Update").css("margin-top", "50px");
        $("#Update").css("margin-left", "-100px");
        $("#Update").css("width", "75px");

        $(".shortTxtDiv span").css("position", "absolute");
        $(".shortTxtDiv span").css("margin-left", "198px");
        
        $(".shortTxtDiv span[data-valmsg-for='Code']").css("margin-top", "-18px");
        $(".shortTxtDiv span[data-valmsg-for='Name']").css("margin-top", "-18px");
        
    }
</script>
