@{
    Layout = null;
    var index = 0;
}
@using ODMSCommon.Resources
@model ODMSModel.WorkOrderCard.WorkOrderCardWarrantyModel
<div id="wrap">
    <div class="panel panel-info">
        <div class="panel-heading">Parça Listesi</div>
        <div class="panel-body">
            <div class="btn-group" style="margin-bottom:10px;">
                <button class="btn btn-primary"><i class="glyphicon glyphicon-transfer"></i> @MessageResource.Global_Display_Send</button>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sökülen Parça</th>
                        <th>Adet</th>
                        <th>Takılan Parça</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.PartName</td>
                                <td>@item.Quantity</td>
                                <td> @Html.TextBoxFor(c=>c.Items[index].RemovedPartName)</td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        @MessageResource.Error_DB_NoRecordFound
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        //FixAutoCompleteNames();
        $("input", "#wrap .table").each(function (i, e) {
            $(e).odmsAutoComplete('@Url.Action("SearchParts")', "Items[" + i + "].RemovedPartId", { minLength: 3, valueField: 'Value', textField: 'Text' });
            $(e).css({
                "border": "1px solid #c0c0c0",
                "border-radius": "4px",
                "padding": "2px 4px"

            });
        });
    });
</script>
