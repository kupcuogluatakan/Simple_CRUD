@{
    ViewBag.Title = ODMSCommon.Resources.MessageResource.DealerSaleChannelDiscountRatios_PageTitle_Create;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}
@model ODMSModel.DealerSaleChannelDiscountRatio.DealerSaleChannelDiscountRatioViewModel
@using (Html.BeginForm("DealerSaleChannelDiscountRatioCreate", "DealerSaleChannelDiscountRatio", FormMethod.Post))
{
    <div class="labelDiv">@Html.LabelFor(v => v.DealerClassName)</div>
    <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.DealerClassCode).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.DealerClassList as List<SelectListItem>).Placeholder(ODMSCommon.Resources.MessageResource.Global_Display_Choose)
        @Html.ValidationMessageFor(v => v.DealerClassCode)
    </div>
    <div class="labelDiv">@Html.LabelFor(v => v.ChannelName)</div>
    <div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(v => v.ChannelCode).DataTextField("Text").DataValueField("Value").BindTo(ViewBag.ChannelList as List<SelectListItem>).Placeholder(ODMSCommon.Resources.MessageResource.Global_Display_Choose)
        @Html.ValidationMessageFor(v => v.ChannelCode)
    </div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.SparePartClassCode)</div>
    <div class="shortTxtDiv">@Html.TextBoxFor(v => v.SparePartClassCode, new { @class = "capitalize" })@Html.ValidationMessageFor(v => v.SparePartClassCode)</div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.TseValidDiscountRatio)</div>
    <div class="shortTxtDiv">@Html.Kendo().NumericTextBoxFor(v => v.TseValidDiscountRatio).Decimals(2).Spinners(false).Format("{0:N}").HtmlAttributes(new{ type = "text", maxlength ="6",data_val_min="0",data_val_max="1000",style="width:200px"}) @Html.ValidationMessageFor(v => v.TseValidDiscountRatio) </div>
    <div class="labelDiv">@Html.LabelFor(v => v.TseInvalidDiscountRatio)</div>
    <div class="shortTxtDiv">@Html.Kendo().NumericTextBoxFor(v => v.TseInvalidDiscountRatio).Spinners(false).Decimals(2).Format("{0:N}").HtmlAttributes(new{ type = "text", maxlength ="6",data_val_min="0",data_val_max="1000",style="width:200px"}) @Html.ValidationMessageFor(v => v.TseInvalidDiscountRatio) </div>
    <div class="clearDiv">&nbsp;</div>
    @ODMSHelpers.Button("Create", CommonUtility.GetResourceValue("Global_Display_Save"), CommonValues.PermissionCodes.DealerSaleChannelDiscountRatio.DealerSaleChannelDiscountRatioCreate, "DealerSaleChannelDiscountRatioCreate")

}
 
<script type="text/javascript">
    $(function () {
        $('.k-widget').addClass('input-validation-valid');
        $(".k-widget").removeClass("input-validation-error");
    });
    $(document).ready(function () {
        $('form').each(function () {
            var validator = $(this).data('validator');
            if (validator && validator.settings) {
                validator.settings.ignore = "";
            }
        });
    });
</script>
