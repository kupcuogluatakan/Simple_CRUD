@using ODMSCommon.Resources
@using ODMSCommon.Security
@model ODMSModel.ClaimRecallPeriodPart.ClaimRecallPeriodPartViewModel
@{
    ViewBag.Title = MessageResource.Bank_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

<style>
    #popupContent {
        width: 550px;
    }

    #popupContentWrapper {
        min-height: 250px !important;
        overflow: hidden;
    }
</style>

<link href="~/Style/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("ClaimRecallPeriodPartUpdate", "ClaimRecallPeriodPart", FormMethod.Post))
{
    @Html.HiddenFor(c=>c.PartId)
    <div class="labelDiv">@Html.LabelFor(v => v.PartId)</div>
    <div class="shortTxtDiv">
     @Html.DisplayFor(c => c.PartCode) / @Html.DisplayFor(c=>c.PartName)
    </div>
    <div class="clearDiv">&nbsp;</div>
    <div class="labelDiv">@Html.LabelFor(v => v.IsActive)</div>
    <div class="shortTxtDiv">
        @Html.CheckBoxFor(c => c.IsActive)
    </div>

    <div class="clearDiv">&nbsp;</div>
    <br />
    @ODMSHelpers.Button("Update", MessageResource.Global_Display_Save, CommonValues.PermissionCodes.ClaimRecallPeriodPart.ClaimRecallPeriodPartUpdate, "")
}
