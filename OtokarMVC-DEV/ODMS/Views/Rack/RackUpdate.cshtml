@using ODMSCommon.Resources
@model ODMSModel.Rack.RackDetailModel
@{
    ViewBag.Title = MessageResource.Rack_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}
<link href="~/Style/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("RackUpdate", "Rack", FormMethod.Post))
{
    @Html.HiddenFor(c => c.HaveStockRackDetail)
    <div  class="labelDiv" style="position: absolute; margin-top: 10px; width: 750px">@Html.LabelFor(d => d.WarehouseCode)</div>
    <div  style="position: absolute; margin-top: 10px; margin-left: 100px;">
        @(Html.Kendo().ComboBox()
                  .Name("WarehouseId")
                  .Placeholder(@MessageResource.Rack_Display_SelectWarehouse)
                  .BindTo(ViewBag.WarehouseList)
                  .DataTextField("Text")
                  .DataValueField("Value")
                  .HtmlAttributes(new { @class = "ComboBox", @style = "width: 200px;" })
              )
        @Html.ValidationMessageFor(d => d.WarehouseId)
    </div>
    
    <div class="labelDiv" style="width: 100px; margin-top: 50px;">@Html.LabelFor(d => d.Code)</div>
    <div class="shortTxtDiv" style="position: absolute; margin-left: 100px; margin-top: 50px; width: 75px">@Html.TextBoxFor(b => b.Code)
        @Html.ValidationMessageFor(d => d.Code)
    </div>
    <div class="labelDiv" style="position: absolute; width: 100px; margin-left: 120px; margin-top: 110px;">@Html.LabelFor(d => d.IsActiveString)</div>
    <div class="shortTxtDiv" style="position: absolute; margin-top: 110px; margin-left: 100px; width: 110px">@Html.CheckBoxFor(d => d.IsActive)</div>
    
    @ODMSHelpers.Button("Update", MessageResource.Global_Display_Update, CommonValues.PermissionCodes.Rack.RackUpdate, "RackUpdate")        
}


<script>
    $(function () {
        adjustPage();
        adjustControlPositions();
        
        if ($('#HaveStockRackDetail').val() == "True") {
            SetWarningMessage('@MessageResource.Rack_Warning_HaveStockRackDetail');
             $("#WarehouseId").data("kendoComboBox").readonly(true);
         }
    });

    function adjustPage() {
        $("#popupContent").css("width", 300);
        $("#popupContentWrapper").css("min-height", 100);
        $("#popupContentWrapper").css("height", 250);
        $("#popupContentWrapper").css("width", 350);

        $("#ajaxWarning").css("width", 350);
        $("#ajaxError").css("width", 350);
        $("#ajaxSuccess").css("width", 350);
    }
    function adjustControlPositions() {
        $("#Update").css("position", "absolute");
        $("#Update").css("margin-top", "140px");
        $("#Update").css("margin-left", "-100px");
        $("#Update").css("width", "75px");

        $(".shortTxtDiv span[data-valmsg-for='Code']").css("position", "absolute");
        $(".shortTxtDiv span[data-valmsg-for='Code']").css("margin-left", "200px");
        $(".shortTxtDiv span[data-valmsg-for='Code']").css("margin-top", "-20px");

        $(".shortTxtDiv span[data-valmsg-for='Name']").css("position", "absolute");
        $(".shortTxtDiv span[data-valmsg-for='Name']").css("margin-left", "200px");
        $(".shortTxtDiv span[data-valmsg-for='Name']").css("margin-top", "-20px");
    }
</script>
