@model ODMSModel.LabourPrice.LabourPriceViewModel
 
<link href="~/Style/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/custom.js"></script>
<style type="text/css">
    #popupContentWrapper
    {
        min-height: 260px !important;
    }
</style>
@Html.AntiForgeryToken()

<div class="labelDiv">@Html.LabelFor(v => v.ModelCode)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.ModelCode).BindTo(ViewBag.VehicleModelList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.ModelCode) </div>
<div class="labelDiv">@Html.LabelFor(v => v.DealerClassName)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.DealerClass).BindTo(ViewBag.DealerClassList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.DealerClass)
</div>
<div class="clearDiv">&nbsp;</div>

<div class="labelDiv">@Html.LabelFor(v => v.DealerRegionId)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.DealerRegionId).BindTo(ViewBag.DealerRegionList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.DealerRegionId) </div>
<div class="labelDiv">@Html.LabelFor(v => v.LabourPriceTypeId)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.LabourPriceTypeId).BindTo(ViewBag.LabourTypeList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.LabourPriceTypeId)
</div>
<div class="clearDiv">&nbsp;</div>

<div class="labelDiv">@Html.LabelFor(v => v.ValidFromDate)</div>
<div class="shortTxtDiv">@Html.Kendo().DatePickerFor(v => v.ValidFromDate).Format("dd/MM/yyyy").ParseFormats(new string[] { "dd.MM.yyyy" }).HtmlAttributes(new { type = "text" }) @Html.ValidationMessageFor(v => v.ValidFromDate) </div>
<div class="labelDiv">@Html.LabelFor(v => v.ValidEndDate)</div>
<div class="shortTxtDiv">@Html.Kendo().DatePickerFor(v => v.ValidEndDate).Format("dd/MM/yyyy").ParseFormats(new string[] { "dd.MM.yyyy" }).HtmlAttributes(new { type = "text" }) @Html.ValidationMessageFor(v => v.ValidEndDate) </div>
<div class="clearDiv">&nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.HasTSUnitPrice)</div>
<div style="width: 300px; float: left;">@Html.Kendo().NumericTextBoxFor(c => c.HasTSUnitPrice).Decimals(2).Format("{0:N}").Spinners(true).HtmlAttributes(new { type = "text", maxlength = "10", style = "width:204px" })
    @Html.ValidationMessageFor(v => v.HasTSUnitPrice)
</div>
<div class="labelDiv">@Html.LabelFor(v => v.HasNoTSUnitPrice)</div>
<div style="width: 300px; float: left;">@Html.Kendo().NumericTextBoxFor(c => c.HasNoTSUnitPrice).Decimals(2).Format("{0:N}").Spinners(true).HtmlAttributes(new { type = "text", maxlength = "10", style = "width:204px" })
    @Html.ValidationMessageFor(v => v.HasNoTSUnitPrice)
</div>
<div class="clearDiv">&nbsp;</div>
<div class="labelDiv">@Html.LabelFor(v => v.CurrencyCode)</div>
<div class="shortTxtDiv">@Html.Kendo().ComboBoxFor(c => c.CurrencyCode).BindTo(ViewBag.CurrencyCodeList as List<SelectListItem>).DataValueField("Value").DataTextField("Text").Placeholder(CommonUtility.GetResourceValue("Global_Display_Choose")) @Html.ValidationMessageFor(v => v.CurrencyCode) </div>
<div class="labelDiv">@Html.LabelFor(v => v.IsActive)</div>
<div class="shortTxtDiv">@Html.CheckBoxFor(c => c.IsActive) @Html.ValidationMessageFor(v => v.IsActive)
</div>
<div class="clearDiv">&nbsp;</div>

<script type="text/javascript">
    $(document).ready(function () {
        if ($('#ModelCode').val() == '') {
            $("#ModelCode").data("kendoComboBox").value('');
            $("#DealerClass").data("kendoComboBox").value('');
            $("#DealerRegionId").data("kendoComboBox").value('');
            $("#LabourPriceTypeId").data("kendoComboBox").value('');
            $("#CurrencyCode").data("kendoComboBox").value('');


            $("#ModelCode").data("kendoComboBox").text('');
            $("#DealerClass").data("kendoComboBox").text('');
            $("#DealerRegionId").data("kendoComboBox").text('');
            $("#LabourPriceTypeId").data("kendoComboBox").text('');
            $("#CurrencyCode").data("kendoComboBox").text('');
        }
        $('form').each(function () {
            var validator = $(this).data('validator');
            if (validator && validator.settings) {
                validator.settings.ignore = "";
            }
        });
    });

</script>
