@{
    ViewBag.Title = MessageResource.LabourPrice_PageTitle_Update;
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}
@using ODMSCommon.Resources
@using ODMSModel.LabourPrice
@model LabourPriceViewModel
@using (Html.BeginForm("LabourPriceUpdate", "LabourPrice", FormMethod.Post))
{
    Html.RenderPartial("_LabourPriceEdit", Model);
    @Html.HiddenFor(c => c.LabourPriceId)
    @Html.HiddenFor(c => c.HasTSLabourPriceId)
    @Html.HiddenFor(c => c.HasNoTSLabourPriceId)
    <input type="hidden" name="LabourPriceId" id="LabourPriceId" value="@Model.LabourPriceId"/>
    <input type="hidden" name="HasTSLabourPriceId" id="HasTSLabourPriceId" value="@Model.HasTSLabourPriceId"/>
    <input type="hidden" name="HasNoTSLabourPriceId" id="HasNoTSLabourPriceId" value="@Model.HasNoTSLabourPriceId"/>
    @ODMSHelpers.Button("Update", CommonUtility.GetResourceValue("Global_Display_Update"), CommonValues.PermissionCodes.LabourPrice.LabourPriceUpdate, "LabourPriceUpdate")
}
