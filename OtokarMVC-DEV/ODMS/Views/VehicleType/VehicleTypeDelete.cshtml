@model ODMSModel.VehicleType.VehicleTypeIndexViewModel
@{
    ViewBag.Title = CommonUtility.GetResourceValue("VehicleType_PageTitle_Delete");
    Layout = "~/Views/Shared/Popup_Layout.cshtml";
}

<link href="~/Style/bootstrap.css" rel="stylesheet" />
 

@using (Html.BeginForm("VehicleTypeDelete", "VehicleType", FormMethod.Post))
{
    if (!Model.HideFormElements)
    {
        
    <div class="labelDiv">@Html.LabelFor(v => v.ModelName)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.ModelName) </div>
    
    <div class="labelDiv">@Html.LabelFor(v => v.TypeName)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.TypeName) </div>
    
    <div class="clearDiv">&nbsp;</div> 
  
    <div class="labelDiv">@Html.LabelFor(v => v.TypeSSID)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.TypeSSID) </div>      
    
    <div class="labelDiv">@Html.LabelFor(v => v.IsActive)</div>
    <div class="shortTxtDiv">@Html.DisplayFor(v => v.IsActive) </div>
        
    <div class="clearDiv">&nbsp;</div> 
    <br /> 
    @Html.HiddenFor(v => v.TypeId)
    @ODMSHelpers.Button("Delete", CommonUtility.GetResourceValue("Global_Display_Delete"), ODMSCommon.CommonValues.PermissionCodes.VehicleType.VehicleTypeDelete, "VehicleTypeDelete")
    }


}